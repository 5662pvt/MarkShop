@model IEnumerable<MarkShop.LoaiSanPham>
@{
    ViewBag.Title = "listLoai";
    Layout = "~/Views/Admin/LayoutAdmin.cshtml";
}

<h2>Danh sách loại sản phẩm</h2>

<a class="btn btn-success" href="@Url.Action("CreateLoai", "ThemXoaSua")">Thêm loại sản phẩm</a>
<br />
<a>&nbsp;</a>
<table border="5" width="100%">
    <tr>
        <th style="text-align:center" width="70%"> Tên loại </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenLoaiSP)
            </td>
            <td style="text-align:center">
                <a class="btn btn-warning" href="@Url.Action("EditLoai", "ThemXoaSua",
                                new { @id = item.MaLoaiSP })">Edit</a> |
                <a class="btn btn-danger" href="@Url.Action("DeleteLoai", "ThemXoaSua",
                                new { @id = item.MaLoaiSP })">Delete</a>
            </td>
        </tr>
    }

</table>

