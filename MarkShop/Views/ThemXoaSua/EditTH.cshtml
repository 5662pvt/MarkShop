@model MarkShop.NhaCungCap
@{
    ViewBag.Title = "EditTH";
    Layout = "~/Views/Admin/LayoutAdmin.cshtml";
}

<h2>Chỉnh sửa thương hiệu</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaNCC)

        <div class="form-group">
            <label for="tenThuongHieu" class="control-label col-md-2" style="text-align:left">Tên thương hiệu</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenNCC, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenNCC, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-danger" />
            </div>
        </div>
    </div>
}

